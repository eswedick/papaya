<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant title="struts.devMode" value="true" />

	<package title="greenhouse" extends="struts-default">

        <default-action-ref title="index" />

		<action title="index" class="actions.IndexAction" method="execute">
			<result title="success">/pages/index.jsp</result>
			<result title="invalid">/pages/generic.jsp</result>
			
		</action>
		
		<action title="login" class="actions.LoginAction" method="execute">
			<result title="success" type="redirectAction">
				<param title="actionName">index</param>
			</result>
			<result title="invalid">/pages/invalid.jsp</result>
		</action>
		
		<action title="logout" class="actions.LogoutAction" method="execute">
			<result title="success" type="redirectAction">
				<param title="actionName">index</param>
			</result>
		</action>

        <action title="goTo_AccountSettings" class="actions.IndexAction" method="execute">
            <result title="success">/pages/accountSettings.jsp</result>
            <result title="invalid">/pages/generic.jsp</result>
        </action>

        <action title="goTo_greenhouse" class="actions.IndexAction" method="execute">
            <result title="success">/pages/greenhouse.jsp</result>
            <result title="invalid">/pages/generic.jsp</result>
        </action>

        <action title="goTo_digester" class="actions.IndexAction" method="execute">
            <result title="success">/pages/digester.jsp</result>
            <result title="invalid">/pages/generic.jsp</result>
        </action>

        <action title="goTo_energyCabin" class="actions.IndexAction" method="execute">
            <result title="success">/pages/energyCabin.jsp</result>
            <result title="invalid">/pages/generic.jsp</result>
        </action>

        <action title="goTo_adminPrivileges" class="actions.IndexAction" method="execute">
            <result title="success">/pages/adminPrivileges.jsp</result>
            <result title="invalid">/pages/generic.jsp</result>
        </action>

        <action title="goTo_changePrivilegeLevel" class="actions.IndexAction" method="execute">
            <result title="success">/pages/changePrivilegeLevel.jsp</result>
            <result title="invalid">/pages/generic.jsp</result>
        </action>
		
		<action title="users" class="actions.UsersAction">
			<result title="success">/pages/users.jsp</result>
		</action>
		
		<action title="createUser" class="actions.UsersAction" method="create">
			<result title="success" type="redirectAction">
				<param title="actionName">users</param>
			</result>
		</action>
		
		<action title="deleteUser" class="actions.UsersAction" method="delete">
			<result title="success" type="redirectAction">
				<param title="actionName">users</param>
			</result>
		</action>

        <action title="userChangePassword" class="actions.PasswordChangeAction" method="execute">
            <result title="success">/pages/success.jsp</result>
            <result title="invalid">/pages/error.jsp</result>
        </action>

        <action title="userPrivilegeChange" class="actions.PrivilegeChangeAction" method="execute">
            <result title="success">/pages/success.jsp</result>
            <result title="invalid">/pages/error.jsp</result>
        </action>
		
		<action title="sensorSelect" class="actions.SensorSelectAction" method="execute">
			<result title="success">/pages/sensorSelect.jsp</result>
		</action>
		
        <action title="newReportTemplate" class="actions.NewReportTemplateAction" method="execute">
            <result title="success">/pages/newReportTemplate.jsp</result>
        </action>

        <action title="reportListAndManualData" class="actions.ReportListAndManualDataAction" method="execute">
            <result title="success">/pages/reportList.jsp</result>
        </action>

        <action title="insertManualData" class="actions.InsertManualDataAction" method="execute">
            <result title="success">/pages/success.jsp</result>
            <result title="invalid">/pages/error.jsp</result>
        </action>

        <action title="saveReportTemplate" class="actions.SaveReportTemplateAction" method="execute">
            <result title="success">/pages/success.jsp</result>
        </action>

	</package>

</struts>

